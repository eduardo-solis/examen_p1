
@{
    ViewBag.Title = "TerminarPedido";
}

<h2>TerminarPedido</h2>




<div class="col-md-12">

    <div class="row">
        <div class="col-md-4">Cliente: @ViewBag.nombre_cliente</div>
        <div class="col-md-4">Fecha: @ViewBag.fecha</div>
        <div class="col-md-4">

            <form action="/Pedido/Pagar?nombre_cliente=@ViewBag.nombre_cliente" method="post">
                <input class="btn btn-primary" type="submit" name="name" value="Pagar" />
            </form>

        </div>
    </div>
    


    <br />

    <table class="table table-hover">

        <thead>
            <th>Tamaño</th>
            <th>Ingredientes</th>
            <th>Cantidad de pizzas</th>
            <th>Subtotal</th>
        </thead>

        <tbody>

            @if (ViewBag.pedidos != null)
            {
                double total = 0;

                foreach (string registros in ViewBag.pedidos)
                {
                    string[] item = registros.Split(',');
                    total += Convert.ToDouble(item[9]);
                    <tr>
                        <td>@item[3]</td>
                        <td>@item[4] @item[5] @item[6]</td>
                        <td>@item[8]</td>
                        <td>@item[9]</td>
                    </tr>
                }

                <tr class="info">
                    <td colspan="3" class="text-uppercase" style="font-size:18px;">Total</td>
                    <td>@total</td>
                </tr>

            }
            else
            {
                <tr class="warning text-center">
                    <td colspan="4">No ha pedido ninguna pizza</td>
                </tr>
            }

        </tbody>

    </table>

</div>

